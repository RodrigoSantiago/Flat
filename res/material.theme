// Text

label : widget {
    font : Roboto
    font-size : 14sp
    textColor : #000000FF
    text-all-caps : false
    vertical-align : top
    horizontal-align : left
}

chip : label {

}

button : label {
    font : Roboto, Bold
    font-size : 18
    text-color : #000000FF
    min-width : 64
    min-height : 36
    padding : 0 16 0 16
    vertical-align : middle
    text-all-caps : true
    radius : 2
    text {
        textColor : #FFFFFFFF
        ripple-color : #00000028
        ripple : true
    }
    outline {
        textColor : #FFFFFFFF
        border-width : 1
        border-color : #000000FF
        color-state-effect : (#00000000, #0000001E, #0000001E, #0000000A, #00000000)
        ripple-color : #00000028
        ripple : true
    }
    container {
        textColor : #000000FF
        ripple-color : #00000028
        background-color : #FFFFFFFF
        elevation-state-effect : (2, 0, 0, 2, 4)
        color-state-effect : (#FFFFFFFF, #0000001E, #0000001E, #0000000A, #00000000)
        ripple : true
        shadow : true
    }
