widget {
    enabled : true
    focusable : false
    clickable : true
    visibility : visible
    width : wrap_content
    height : wrap_content
    max-width : match_parent
    max-height : match_parent
    min-width : 0
    min-height : 0
    x : 0
    y : 0
    centre-x : 0
    centre-y : 0
    scale-x : 1
    scale-y : 1
    rotation : 0
    elevation : 0
    opacity : 1
    margin : 0
    padding : 0
    radius : 0
    background-color : #00000000
    border-width : 0
    border-color : #000000FF
    shadow : false
    ripple : false
    ripple-color : #000000BC
}

