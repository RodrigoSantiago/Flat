/*
  TextField Styles
*/
text-outline : textfield {
    radius-top : 4;
    radius-right : 4;
    radius-bottom : 4;
    radius-left : 4;

    high-label-text-size : 10sp;
    high-label-text-color : #FF0000FF;

    padding-top : 16;
    border-discret : false;
}
text-dense : textfield {
}

/*
  Image
*/

canvas {
}
skecth {
}

/*
  Selection
*/

checkbox {
    width : 24;
    height : 24;
    ripple : true;
    ripple-color : #00000080;
    icon-indeterminate : url(icons/minus-box.svg);

    enabled {
        color : #000000;
        icon : url(icons/checkbox-blank-outline.svg);
    }
    activated {
        color : #FF0000;
        icon : url(icons/checkbox-marked.svg);
    }
}

radiobutton {
    width : 24;
    height : 24;
    ripple : true;
    ripple-color : #00000080;

    enabled {
        color : #000000;
        icon : url(icons/radiobox-blank.svg);
    }
    activated {
        color : #FF0000;
        icon : url(icons/radiobox-marked.svg);
    }
}

switch {
    height : 16;
    width : 36;
    padding-top : 4;
    padding-bottom : 4;
    ripple : true;
    ripple-color : #00000080;
    radius-top : 8;
    radius-left : 8;
    radius-right : 8;
    radius-bottom : 8;

    shadow : true;
    elevation : 1;
    background-color : #CA5050;
    icon : url(icons/switch-shape.svg);

    transition-duration : 100;

    enabled {
        color : #FFFFFF;
        slide-animation : 8;
    }
    activated {
        color : #FF0000;
        slide-animation : 24;
    }
}

/*
  Value
*/

slider {
    focusable : true;
    height : 2;
    width : 128;
    padding-top : 18;
    padding-left : 18;
    padding-bottom : 18;
    padding-right : 18;
    radius-top : 2;
    radius-left : 2;
    radius-right : 2;
    radius-bottom : 2;
    ripple : true;
    ripple-color : #00000080;

    color : #FF0000;
    background-color : #CCCCCC;
    icon : url(icons/slider-icon.svg);

    label-enabled : true;
    label-font : font("Roboto", bold);
    label-text-size : 16;
    label-text-color : #FFFFFF;
    label-position : 32;
    label-decimal : 0;
    label-time-out : 400;
    label-icon : url(icons/slider-label.svg);

    transition-duration : 100;

    enabled {
        expansion : 0;
        expansion-color : #FF000000;
    }
    hovered {
        expansion : 16;
        expansion-color : #FF000030;
    }
    pressed {
        expansion : 16;
        expansion-color : #FF000030;
    }
    dragged {
        expansion : 16;
        expansion-color : #FF000030;
    }
}

scrollbar {
    color : #FF0000;
    background-color : #ACACAC;

    min-range-display : 24;
    transition-duration : 100;

    label-font : font("Roboto", bold);
    label-text-color : #FFFFFF;
    label-text-size : 32;
    popup-x : -32;
    popup-y : -68;
    popup-width : 64;
    popup-height : 64;
    popup-radius-top : 32;
    popup-radius-right : 32;
    popup-radius-bottom : 0;
    popup-radius-left : 32;
    popup-time-out : 300;

    linear-flow : ihorizontal;
}

progressbar {
    height : 4;
    width : 240;
    color : #FFFFFF;
    background-color : #EEEEEE;
    animation-duration : 3000;
}

progresscircle {
    height : 48;
    width : 48;
    indicator-size : 4;
    animation-duration : 8000;
    color-0 : #FFFFFF;
    color-1 : #FFFFFF;
    color-2 : #FFFFFF;
    color-3 : #FFFFFF;
}

