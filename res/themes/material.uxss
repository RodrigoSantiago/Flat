/*
  Selection
*/

checkbox {
    width : 24;
    height : 24;
    ripple : true;
    ripple-color : #00000080;
    icon-indeterminate : url(icons/minus-box.svg);

    enabled {
        color : #000000;
        icon : url(icons/checkbox-blank-outline.svg);
    }
    activated {
        color : #FF0000;
        icon : url(icons/checkbox-marked.svg);
    }
}

radiobutton {
    width : 24;
    height : 24;
    ripple : true;
    ripple-color : #00000080;

    enabled {
        color : #000000;
        icon : url(icons/radiobox-blank.svg);
    }
    activated {
        color : #FF0000;
        icon : url(icons/radiobox-marked.svg);
    }
}

switch {
    height : 16;
    width : 36;
    padding-top : 4;
    padding-bottom : 4;
    ripple : true;
    ripple-color : #00000080;
    radius-top : 8;
    radius-left : 8;
    radius-right : 8;
    radius-bottom : 8;

    shadow : true;
    elevation : 1;
    background-color : #CA5050;
    icon : url(icons/switch-shape.svg);

    transition-duration : 100;

    enabled {
        color : #FFFFFF;
        slide-animation : 8;
    }
    activated {
        color : #FF0000;
        slide-animation : 24;
    }
}

