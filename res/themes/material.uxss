/*
  Text
*/

label {
    font : family(Roboto);
    font-size : 16sp;
    text-color : #000000FF;
    text-all-caps : false;
    vertical-align : left;
    horizontal-align : top;
}

button : label {
    ripple : true;
    ripple-color : #00000080;
    shadow : true;
    radius-top : 2;
    radius-left : 2;
    radius-right : 2;
    radius-bottom : 2;
    padding-left : 8;
    padding-right : 8;
    padding-top : 4;
    padding-bottom : 4;
    font-size : 24sp;
    background-color : #FFFFFFFF;
    transition-duration : 100;

    enabled {
        elevation : 1;
    }
    hovered {
        elevation : 2;
    }
    pressed {
        elevation : 4;
    }
}

