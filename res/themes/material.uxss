tab {
    background-color : #CCCCCC;
    padding-left : 16;
    padding-right : 8;
    padding-top : 32;
    padding-bottom : 8;
    margin-left : 24;
    margin-right : 32;
    margin-top : 64;
    margin-bottom : 2;
