    header-height : 64;
    header-elevation : 2;
    header-indicator-height : 2;
    header-indicator-color : #00FF00;
    header-color : #000000;
    header-padding-left : 16;
    header-padding-right : 16;
}

tab-header : label {
    ripple : true;
    ripple-color : #00000080;
    shadow : true;
    transition-duration : 100;

    height : match_parent;
    max-width : 160;
    min-width : 90;

    vertical-align : middle;
    horizontal-align : center;
    enabled {
        background-color : #FF0000;
    }
    hovered {
        background-color : #BBBB00;
    }
    activated {
        background-color : #FFFF00;
        font : font("Roboto", bold);
    }
}

