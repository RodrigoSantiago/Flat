widget {
}

/*
  Text
*/

label {
    font : font("Roboto");
    text-size : 24sp;
    text-color : #000000FF;
    text-all-caps : false;
    vertical-align : middle;
    horizontal-align : left;
}

button : label {
    font : font("Roboto", bold);
    ripple : true;
    ripple-color : #00000080;
    shadow : true;
    radius-top : 4;
    radius-left : 4;
    radius-right : 4;
    radius-bottom : 4;
    padding-left : 16;
    padding-right : 16;
    min-height : 36;
    text-size : 14sp;
    background-color : #FFFFFFFF;
    transition-duration : 100;
    horizontal-align : bottom;

    enabled {
        elevation : 1;
    }
    hovered {
        elevation : 2;
    }
    pressed {
        elevation : 4;
    }
}

togglebutton : button {
}

textfield {
    cursor : ibeam;
    focusable : true;

    text-size : 16sp;
    text-color : #000000;
    label-text-size : 16sp;
    label-text-color : #00000080;
    high-label-text-size : 12sp;
    high-label-text-color : #FF0000FF;
    help-text-size : 12sp;
    help-text-color : #FF0000;
    placeholder-text-color : #00000080;
    cursor-color : #FF0000;

    padding-top : 20;
    padding-right : 12;
    padding-bottom : 16;
    padding-left : 12;

    radius-top : 4;
    radius-right : 4;

    margin-bottom : 24;

    leading-spacing : 12;
    act-ripple : true;
    act-ripple-color : #0000FFFF;
    act-spacing : 12;

    background-color : #CCCCCCFF;
    selection-color : #60A0FF;
    transition-duration : 100;
    border-color : #000000AC;
    border-width : 1;

    border-discret : true;

    hovered {
        background-color : #FFFFFF;
    }
    focused {
        background-color : #EEEEEE;
        border-color : #FF0000;
        border-width : 2;
    }
}

textarea {
    cursor : ibeam;
    focusable : true;

    text-size : 16sp;
    text-color : #000000;
    label-text-size : 16sp;
    label-text-color : #00000080;
    high-label-text-size : 12sp;
    high-label-text-color : #FF0000FF;
    help-text-size : 12sp;
    help-text-color : #FF0000;
    placeholder-text-color : #00000080;
    cursor-color : #FF0000;

    padding-top : 20;
    padding-right : 12;
    padding-bottom : 16;
    padding-left : 12;

    radius-top : 4;
    radius-right : 4;

    margin-bottom : 24;

    leading-spacing : 12;
    act-ripple : true;
    act-ripple-color : #0000FFFF;
    act-spacing : 12;

    background-color : #CCCCCCFF;
    selection-color : #60A0FF;
    border-color : #000000AC;
    border-width : 1;

    border-discret : true;

    hovered {
        background-color : #FFFFFF;
    }
    focused {
        background-color : #EEEEEE;
        border-color : #FF0000;
        border-width : 2;
    }
}

chip : label {
}

divider {
    height : 1;
    width : MATCH_PARENT;
    background-color : #00000080;
}

/*
  Buttons Styles
*/

flat : button {
}

raised : button {
}

outline : button {
}

floating : button {
