/*
  Value
*/

horizontal-scroll-bar {
    color : alpha($on-card-color, 0.25);
    background-color : alpha($on-card-color, 0.1);
    min-width : 6dp;
    min-height : 6dp;
    min-range : 0.15;
    transition-duration : 0.1;
    width : match_parent;
    cursor : hand;
}

vertical-scroll-bar {
    color : alpha($on-card-color, 0.25);
    background-color : alpha($on-card-color, 0.1);
    min-width : 6dp;
    min-height : 6dp;
    min-range : 0.1;
    transition-duration : 0.1;
    height : match_parent;
    cursor : hand;
}

/*
  Layout
*/

parent {

}

scene {
    focusable : true;
    cursor : arrow;
}

box {

}

linear-box {

}

grid {

}

scroll-box {
    enabled {
        background-color : #FF000000;
    }
    hovered {
        background-color : #FF000030;
    }
}


list-view {
    background-color : #FF8080;
    item-height : 32;
}

list-item {
    background-color : #E0E0E0;
    min-width : 128;
    width : match_parent;
    margin-bottom : 1;
    icon : '/default/icons/checkbox-marked.svg';
    icon-width : 24;
    icon-height : 24;
    icon-color : red;
    state-icon-open : '/default/icons/checkbox-marked.svg';
    state-icon-closed : '/default/icons/checkbox-blank-outline.svg';
    state-icon-color : blue;
    state-icon-width : 12;
    state-icon-height : 12;
    layer-width : 12;
    state-icon-cursor : hand;
}

