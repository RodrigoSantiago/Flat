widget {

}

/*
  Text
*/

toggle-button : button {
    icon : '/default/icons/checkbox-blank-outline.svg';
    icon-color : gray;
    activated {
        icon : '/default/icons/checkbox-marked.svg';
        icon-color : red;
    }
}

text-area {
    text-font : font("Roboto");
    text-size : 16sp;
    text-color : #000000FF;
    vertical-align : top;
    horizontal-align : left;
    background-color :#FFFFFF;
    cursor : ibeam;
    focusable : true;
}

text-field : text-area {
    title-transition-duration : 0.25;
    title-spacing : 2;
    text-divider-size : 1;
    text-divider-color : blue;
}

text-input-field : text-field {
    action-icon : '/default/icons/radiobox-marked.svg';
    action-icon-color : red;
    action-icon-bg-color : #FF000080;
    action-icon-cursor : hand;
    action-icon-spacing : 8;
}

text-drop-down : text-input-field {
}

divider {
    height : 1;
    width : MATCH_PARENT;
    background-color : #00000080;
}

/*
  Buttons Styles
*/

raised : button {

}

outline : button {

}

floating : button {

}

/*
  TextField Styles
*/
text-outline : text-field {
    radius-top : 4;
    radius-right : 4;
    radius-bottom : 4;
    radius-left : 4;

    high-label-text-size : 10sp;
    high-label-text-color : #FF0000FF;

    padding-top : 16;
    border-discret : false;
}

/*
  Image
*/

image-view {

}

canvas {

}

